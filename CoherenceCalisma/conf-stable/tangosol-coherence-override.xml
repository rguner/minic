<?xml version="1.0"?>

<!--
This operational configuration override file is set up for use with Coherence in a production mode.
-->

<!--  standart production settings   -->
<coherence>
 
<cluster-config>

    <packet-publisher>
        <packet-delivery>
                <timeout-milliseconds>60000</timeout-milliseconds>
        </packet-delivery>
    </packet-publisher>

    <!--   auth section -->
    <authorized-hosts>

       <!-- WLS and Coherence Cache servers -->
        <host-address id="throne22">10.201.213.82</host-address>
        <host-address id="throne12">10.201.213.81</host-address>
        <host-address id="gunerHost">10.210.177.12</host-address>
        
        
        

    </authorized-hosts>

    <port-auto-adjust>true</port-auto-adjust>

    <member-identity>
         <cluster-name system-property="tangosol.coherence.cluster">ECOMCOHERENCESTB-CLUSTER</cluster-name>
    </member-identity>

    <multicast-listener>
         <address system-property="tangosol.coherence.clusteraddress">226.225.228.227</address>
         <port system-property="tangosol.coherence.clusterport">27100</port>
         <time-to-live system-property="tangosol.coherence.ttl">3</time-to-live>
    </multicast-listener>

</cluster-config>

 
    <logging-config>
          <severity-level system-property="tangosol.coherence.log.level">5</severity-level>
          <character-limit system-property="tangosol.coherence.log.limit">5048576</character-limit>
    </logging-config>

</coherence>
