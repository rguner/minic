		<!--  
		https://maven.apache.org/guides/introduction/introduction-to-the-lifecycle.html
		 -->
		
		<plugin>
			<artifactId>maven-help-plugin</artifactId>
			<version>2.2</version>
			<executions>
				<execution>
					<!--  <phase>process-resources</phase>  --> <!--   eclipste hata gosteriyor ama calisiyor. -->
